---
import Link from "./Link.astro";

const navLinks = [
  {
    title: "Blog",
    href: "/blog",
    isExternal: false,
  },
  {
    title: "Pics",
    href: "/pics",
    isExternal: false,
  },
  {
    title: "Reads",
    href: "/reads",
    isExternal: false,
  },
  {
    title: "Tags",
    href: "/tags",
    isExternal: false,
  },
  {
    title: "RSS",
    href: "/rss.xml",
    isExternal: true,
  },
];
---

<footer>
  <p>
    {new Date().getUTCFullYear()}
  </p>
  <nav>
    <ul>
      {
        navLinks.map((link) => (
          <li>
            <p>
              <Link href={link.href} isExternal={link.isExternal}>
                {link.title}
              </Link>
            </p>
          </li>
        ))
      }
    </ul>
  </nav>
</footer>

<style>
  footer {
    border-top: 1px solid rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    margin-top: var(--spacing-4x);
    padding-top: var(--spacing);
  }

  footer nav ul {
    display: flex;
    gap: var(--spacing-2x);
  }

  li {
    list-style: none;
  }
</style>
